{{!
    @template message_email/email_digest_html

    Branded HTML template for message digests.
}}
{{#conversations}}
<table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="width:100%;border:1px solid #e5e7eb;border-collapse:collapse;margin:0 0 16px 0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,Helvetica,Arial,sans-serif;">
    <tr>
        <td style="background:#0F2A3D;color:#ffffff;padding:12px 14px;vertical-align:middle;width:44px;">
            <img src="{{{ grouppictureurl }}}" width="40" height="40" style="border-radius:999px;display:block;" alt="">
        </td>
        <td style="background:#0F2A3D;color:#ffffff;padding:12px 14px;vertical-align:middle;">
            <div style="font-size:14px;line-height:18px;font-weight:700;">{{ groupname }}</div>
            <div style="font-size:12px;line-height:16px;color:#cfe8ff;margin-top:2px;">{{ coursename }}</div>
        </td>
        <td style="background:#0F2A3D;color:#ffffff;padding:12px 14px;vertical-align:middle;text-align:right;white-space:nowrap;">
            <span style="background:#00AEEF;color:#ffffff;border-radius:999px;padding:2px 8px;font-size:12px;line-height:16px;display:inline-block;">{{ numberofunreadmessages }}</span>
            <span style="color:#cfe8ff;font-size:12px;line-height:16px;margin-left:6px;">{{#str}} emaildigestunreadmessages, message_email {{/str}}</span>
        </td>
    </tr>
    {{#messages}}
    <tr>
        <td style="padding:12px 14px;vertical-align:top;text-align:center;width:44px;">
            <img src="{{{ userpictureurl }}}" width="30" height="30" style="border-radius:999px;display:inline-block;" alt="">
        </td>
        <td colspan="2" style="padding:12px 14px;vertical-align:top;">
            <div style="font-size:13px;line-height:18px;color:#111827;font-weight:700;">
                {{{ userfullname }}}
                <span style="float:right;color:#6b7280;font-size:12px;line-height:16px;font-weight:400;">{{ timesent }}</span>
            </div>
            <div style="font-size:13px;line-height:18px;color:#111827;margin-top:4px;">
                {{{ message }}}
            </div>
        </td>
    </tr>
    {{/messages}}
    <tr>
        <td colspan="3" style="padding:12px 14px;border-top:1px solid #e5e7eb;font-size:12px;line-height:16px;">
            <div style="color:#00AEEF;">
                {{{viewallmessageslink}}}
            </div>
        </td>
    </tr>
</table>
{{/conversations}}
